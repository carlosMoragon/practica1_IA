% Practica 1: Ajedrez

% Comprobar que se puede mover esa ficha a esa posición.
moverPieza(Pieza, Color, C, F, NC, NF):-
    pieza(Pieza),
    color(Color),
    fila(F), columna(C), fila(NF), columna(NC),
    mover(Pieza, F, C, NF, NC).

% Mover en Horizontal
mover(Pieza, F, C, F, NC):-
    recto(Pieza),
    C \= NC.

% Mover en Vertical
mover(Pieza,F, C, NF, C):-
    recto(Pieza),
    F \= NF.

% Mover en diagonal
mover(Pieza,F, C, NF, NC):-
    diagonal(Pieza),
    numero(C,X), numero(NC, Y),
    abs(X-Y) =:= abs(F-NF).

mover(Pieza, F, C, NF, NC):-
    enL(Pieza),
    numero(C,X), numero(NC, Y),
    ((abs(X-Y) =:= 2, abs(F-NF) =:= 1);
     (abs(X-Y) =:= 1, abs(F-NF) =:= 2)).

% Mover el rey
mover(Pieza, F, C, NF, NC):-
    rey(Pieza),
    numero(C,X), numero(NC, Y),
    casillaContinua(F, X, NF, Y).

% Mover el peón hacia delante
mover(Pieza,F,C,NF, C):-
    peon(Pieza),
    NF=:=F+1.

% Comer con el peón
mover(Pieza, F, C, NF, NC):-
    peon(Pieza),
    hayPieza(NF, NC),
    numero(C,X), numero(NC, Y),
    NF=:=F+1,
    abs(X-Y)=:=1.


casillaContinua(F, C, NF, C):-
    abs(F-NF)=:=1.

casillaContinua(F, C, NF, NC):-
    abs(C-NC) =:= 1,abs(F-NF) =:= 1.

casillaContinua(F, C, F, NC):-
    abs(C-NC)=:=1.


